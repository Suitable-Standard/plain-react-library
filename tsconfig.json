{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react",
    "newLine": "lf",
    "checkJs": true
  },
  "include": ["./src", "./global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
